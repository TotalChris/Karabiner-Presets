{
	"description": "Map Control to Command Key (For Shortcuts, Excludes Terminal)",
	"manipulators": [
		{
			"conditions": [
				{
					"bundle_identifiers": [
						"^com\\.apple\\.Terminal$"
					],
					"type": "frontmost_application_unless"
				}
			],
			"from": {
				"key_code": "left_control"
			},
			"to": {
				"key_code": "left_command"
			},
			"type": "basic"
		},
		{
			"conditions": [
				{
					"bundle_identifiers": [
						"^com\\.apple\\.Terminal$"
					],
					"type": "frontmost_application_unless"
				}
			],
			"from": {
				"key_code": "right_control"
			},
			"to": {
				"key_code": "right_command"
			},
			"type": "basic"
		}
	]
}